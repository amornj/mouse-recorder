<Window x:Class="MouseRecorder.Views.KeyCaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Capture Keyboard Shortcut"
        Width="350" Height="180"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        KeyDown="Window_KeyDown">

    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="Press a key combination..."
                   FontSize="15" HorizontalAlignment="Center" Margin="0,0,0,16" />

        <TextBlock x:Name="CapturedDisplay"
                   Text="Waiting..."
                   FontSize="20" FontWeight="SemiBold"
                   HorizontalAlignment="Center" Margin="0,0,0,20"
                   Foreground="#3F51B5" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="OkButton" Content="OK" Width="80" Padding="4"
                    IsEnabled="False" Click="Ok_Click" Margin="0,0,8,0" IsDefault="True" />
            <Button Content="Cancel" Width="80" Padding="4"
                    Click="Cancel_Click" IsCancel="True" />
        </StackPanel>
    </StackPanel>
</Window>
